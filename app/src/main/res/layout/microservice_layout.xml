<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlContent"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="7dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:id="@+id/ivMicroservice"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Limpieza del Hogar"
                android:id="@+id/tvTitle"
                android:textSize="19sp"
                android:maxLines="2"
                android:textColor="@android:color/black"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/ivMicroservice"
                android:layout_toEndOf="@+id/ivMicroservice"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Andres Jimenez"
                android:id="@+id/tvUser"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                android:maxLines="2"
                android:textColor="#999999"
                android:layout_below="@+id/tvTitle"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignLeft="@+id/tvTitle"
                android:layout_alignStart="@+id/tvTitle" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="19â‚¬/hora"
                android:id="@+id/tvPrice"
                android:textSize="17sp"
                android:maxLines="2"
                android:textColor="#999999"
                android:layout_centerVertical="true"
                android:layout_alignLeft="@+id/tvUser"
                android:layout_alignStart="@+id/tvUser" />

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ratingBar"
                android:numStars="5"
                android:stepSize="0.1"
                android:rating="2"
                android:layout_marginTop="7dp"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_below="@+id/tvPrice"
                android:layout_alignLeft="@+id/tvPrice"
                android:layout_alignStart="@+id/tvPrice" />


        </RelativeLayout>



    </android.support.v7.widget.CardView>


</RelativeLayout>